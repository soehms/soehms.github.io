<!-- MATH
 ${C(A)}^{\bot}/K(A)$
 -->
<IMG
 WIDTH="114" HEIGHT="45" ALIGN="MIDDLE" BORDER="0"
 SRC="img102.png"
 ALT="${C(A)}^{\bot}/K(A)$"> of <IMG
 WIDTH="14" HEIGHT="19" ALIGN="BOTTOM" BORDER="0"
 SRC="img100.png"
 ALT="$\theta$">.<IMG
 WIDTH="19" HEIGHT="18" ALIGN="BOTTOM" BORDER="0"
 SRC="img35.png"
 ALT="$\Box$">
